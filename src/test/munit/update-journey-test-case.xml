	<munit:test name="TransactionalActionsAlwaysJoinPositiveUpdateTestCase" ignore="true">
			<munit:behavior>
				<flow-ref name="TruncateTableFlow" />
				<flow-ref name="ComplexCaseSetup" />
			</munit:behavior>
			<munit:execution>
				<try transactionalAction="ALWAYS_BEGIN">
				<db:update config-ref="dbConfig" target="noneChanges">
					<db:sql ><![CDATA[UPDATE flights SET start=:argentina where destination=:brazil and id=:id;]]></db:sql>
					<db:input-parameters ><![CDATA[#[{
argentina:'AR',
brazil:'BR',
id:1
}]]]></db:input-parameters>
				</db:update>
				<db:update config-ref="dbConfig" transactionalAction="ALWAYS_JOIN">
					<db:sql ><![CDATA[UPDATE flights SET start=:mexico where destination=:brazil and id=:id;]]></db:sql>
					<db:input-parameters ><![CDATA[#[{
mexico:'MX',
brazil:'BR',
id:1
}]]]></db:input-parameters>
				</db:update>
				</try>
				<db:select config-ref="dbConfig" transactionalAction="ALWAYS_JOIN">
						<db:sql><![CDATA[SELECT * from flights where id = 1;]]></db:sql>
					</db:select>
			<ee:transform>
					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</munit:execution>
			<munit:validation>
				<munit-tools:assert-equals actual="#[payload[0].start]" expected="#['MX']" />
			</munit:validation>
		</munit:test>
